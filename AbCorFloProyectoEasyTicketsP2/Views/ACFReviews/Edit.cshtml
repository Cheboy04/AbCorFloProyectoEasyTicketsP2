@model ProyectoEasyTicket.Models.ACFReviews

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ACFReviewID" />
            <div class="form-group">
                <label asp-for="ACFComentario" class="control-label"></label>
                <input asp-for="ACFComentario" class="form-control" />
                <span asp-validation-for="ACFComentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ACFCalificacion" class="control-label"></label>
                <input asp-for="ACFCalificacion" class="form-control" />
                <span asp-validation-for="ACFCalificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ACFFecha" class="control-label"></label>
                <input asp-for="ACFFecha" class="form-control" readonly value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="ACFFecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ACFTicketID" class="control-label"></label>
                <select asp-for="ACFTicketID" class="form-control" asp-items="ViewBag.ACFTicketID"></select>
                <span asp-validation-for="ACFTicketID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
