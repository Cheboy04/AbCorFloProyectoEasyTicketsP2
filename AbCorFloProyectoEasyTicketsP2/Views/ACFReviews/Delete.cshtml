@model ProyectoEasyTicket.Models.Reviews

@{
    ViewData["Title"] = "Eliminar Reseña";
}

<div class="container mt-5">
    <h1 class="text-danger mb-4">¿Está seguro de eliminar esta reseña?</h1>
    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Comentario</dt>
                <dd class="col-sm-9">@Model.Comentario</dd>

                <dt class="col-sm-3">Calificación</dt>
                <dd class="col-sm-9">@Model.Calificacion</dd>

                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Evento</dt>
                <dd class="col-sm-9">@Model.TicketID</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="ReviewID" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>