@model IEnumerable<ProyectoEasyTicket.Models.Reviews>

@{
    ViewData["Title"] = "Reseñas";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Reseñas</h1>
        <p class="text-muted">Explora las opiniones y calificaciones de nuestros usuarios.</p>
    </div>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nueva Reseña
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Comentario)</th>
                    <th>@Html.DisplayNameFor(model => model.Calificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                    <th>@Html.DisplayNameFor(model => model.Ticket)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Comentario)</td>
                        <td>
                            <!-- Mostrar número de calificación -->
                            <strong>@item.Calificacion</strong>
                            <!-- Mostrar estrellas con color amarillo -->
                            @for (int i = 0; i < item.Calificacion; i++)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ticket.Evento)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ReviewID" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ReviewID" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ReviewID" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>